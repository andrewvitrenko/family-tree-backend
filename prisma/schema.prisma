generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid()) @db.Uuid
  email     String  @unique
  password  String
  firstName String
  lastName  String
  person    Person?
}

model Person {
  id        String     @id @default(uuid()) @db.Uuid
  firstName String
  lastName  String
  birthDate DateTime?
  sex       Sex
  userId    String?    @unique @db.Uuid
  user      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  children  Relative[] @relation("Child")
  parents   Relative[] @relation("Parent")
}

model Relative {
  id       String  @id @default(uuid()) @db.Uuid
  childId  String? @db.Uuid
  parentId String? @db.Uuid

  parent Person? @relation("Parent", fields: [parentId], references: [id], onDelete: NoAction)
  child  Person? @relation("Child", fields: [childId], references: [id], onDelete: NoAction)
}

enum Sex {
  MALE
  FEMALE
}
